<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.singletondev.bakingapp.RecipeDetailStepsFragment"
    android:orientation="vertical">


    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/simpleExoPlayer"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="5dp">

       <TextView
           android:id="@+id/descriptionSteps"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="17sp"
           android:padding="10dp"
           android:text="Coba memaska menggunakan tungku api"/>

   </android.support.v7.widget.CardView>

   <RelativeLayout
       android:id="@+id/rl_navigation"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <TextView
           android:id="@+id/backButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:text="Back"
           android:layout_alignParentBottom="true"
           android:padding="20dp"
           android:textSize="20sp"
           android:textColor="@color/colorAccent"/>

       <TextView
           android:id="@+id/nextButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:text="Next"
           android:layout_alignParentBottom="true"
           android:padding="20dp"
           android:textSize="20sp"
           android:textColor="@color/colorAccent"/>

   </RelativeLayout>




</LinearLayout>
